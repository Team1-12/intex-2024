<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta tags and title -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Internal Landing Page</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Font Awesome icons -->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" />
    <!-- Custom CSS -->
    <style>
        /* Incorporate your CSS styles and color scheme */
        @charset "UTF-8";

        /* Our Styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
        .container-fluid {
            padding-top: 20px;
        }
        h1, h2 {
            color: #333; /* Darker grey for headers */
        }
        .navbar {
            background-color: #303030; /* Darker turtle green */
        }
        .navbar-brand, .nav-link {
            color: #fff !important;
        }
        .nav-link.active {
            background-color: #354A21; /* Turtle green accent */
            color: #fff !important;
            border-radius: 10px;
            
        }
        .logout-btn {
            color: #fff;
            margin-left: 15px;
        }
        .table-responsive {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
        }
        /* Adjust navbar padding */
        .navbar .nav-link {
            padding-right: 20px;
        }
        /* Custom styles for charts */
        .chart-container {
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            margin-bottom: 20px;
        }
    </style>
</head>

<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="#">Turtle Shelter Project -- Admin</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" 
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse ml-auto" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link active" href="/internalLanding">
                        <i class="fas fa-home"></i> Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/eventRecords">
                        <i class="fas fa-calendar-alt"></i> Events
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/volunteerRecords">
                        <i class="fas fa-users"></i> Volunteers
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/adminRecords">
                        <i class="fas fa-user-shield"></i> Admins
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link logout-btn" href="#">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main content -->
    <div class="container-fluid">
        <!-- Header -->
        <div
            class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Dashboard</h1>
        </div>

        <!-- Content here -->
        <h2>Overview</h2>
        <div class="row">
            <!-- Chart or dashboard elements -->
            <div class="col-md-6 chart-container">
                <!-- Placeholder for a chart -->
                <canvas class="my-4 w-100" id="myChart" width="900" height="380"></canvas>
            </div>
            <div class="col-md-6 chart-container">
                <!-- Another chart or data -->
                <canvas class="my-4 w-100" id="myChart2" width="900" height="380"></canvas>
            </div>
        </div>

        <!-- Additional content -->
        <h2>Recent Activity</h2>
        <div class="table-responsive">
            <!-- Placeholder for a table or other content -->
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Activity</th>
                        <th>Date</th>
                        <th>User</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Table data -->
                    <tr>
                        <td>1</td>
                        <td>New Event Requested</td>
                        <td>2023-10-12</td>
                        <td>John Doe</td>
                        <td>Pending</td>
                    </tr>
                    <!-- Add more rows as needed -->
                </tbody>
            </table>
        </div>

    </div>

    <!-- Bootstrap JS and dependencies (Popper.js and jQuery) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script
        src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script
        src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Chart.js for charts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Custom scripts for this template -->
    <script>
        // Sample data for Chart 1
        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'line', // Chart type
            data: {
                labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'],
                datasets: [{
                    label: 'Volunteer Sign-ups',
                    data: [3, 5, 2, 8, 7, 10, 6],
                    backgroundColor: 'rgba(117, 184, 79, 0.5)', // Turtle green with opacity
                    borderColor: 'rgba(117, 184, 79, 1)', // Turtle green
                    fill: false,
                    lineTension: 0
                }]
            },
            options: {
                responsive: true,
                title: {
                    display: true,
                    text: 'Monthly Volunteer Sign-ups'
                },
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true,
                            precision: 0
                        }
                    }]
                }
            }
        });

        // Sample data for Chart 2
        var ctx2 = document.getElementById('myChart2').getContext('2d');
        var myChart2 = new Chart(ctx2, {
            type: 'bar', // Chart type
            data: {
                labels: ['Events', 'Volunteers', 'Admins'],
                datasets: [{
                    label: 'Total Count',
                    data: [12, 50, 5],
                    backgroundColor: [
                        'rgba(117, 184, 79, 0.7)', // Turtle green
                        'rgba(54, 162, 235, 0.7)', // Blue
                        'rgba(255, 206, 86, 0.7)'  // Yellow
                    ],
                    borderColor: [
                        'rgba(117, 184, 79, 1)',
                        'rgba(54,162,235,1)',
                        'rgba(255,206,86,1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                title: {
                    display: true,
                    text: 'Current Totals'
                },
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true,
                            precision: 0
                        }
                    }]
                }
            }
        });
    </script>
</body>
</html>
