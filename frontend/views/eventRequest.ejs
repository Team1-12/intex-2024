        <section>
            <div class="container">
                <h2>Event Request Form</h2>
                <form id="eventRequestForm" method="post" action="/submitEventRequest">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="Contact Name *" required />
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="email" name="email" placeholder="Contact Email *" required />
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="tel" name="phone" placeholder="Contact Phone *" required />
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="organization" placeholder="Organization/Group Name" required/>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="volunteers" placeholder="Number of Volunteers *" min="1" required />
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="hours" placeholder="Number of Hours for Event *" min="1" required />
                    </div>
                    <div class="form-group">
                        <label for="volunteerType">Type of Volunteering *</label>
                        <select class="form-control" name="volunteerType" id="volunteerType" required>
                            <option value="">Select Type</option>
                            <option value="sewing">Sewing</option>
                            <option value="non-sewing">Non-Sewing</option>
                            <option value="both">Both</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <p>Please select the range of dates below for which your organization is available to volunteer. <br>If only one date is available, insert that date into the first field and leave the second blank.</p>
                        <label for="startDate">First Available Date *</label>
                        <input class="form-control" type="date" name="startDate" required />
                    </div>
                    <div class="form-group">
                        <label for="endDate">Last Available Date</label>
                        <input class="form-control" type="date" name="endDate" />
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="eventDetails" placeholder="Other Scheduling/Event Details *" required></textarea>
                    </div>
                    <button class="btn btn-primary" type="submit">Send Request</button>
                </form>
            </div>
        </section>
