        <style>
            body {
                padding-top: 80px; /* Ensure top content isn't cut off */
            }
            .info-card-container {
                display: flex;
                flex-wrap: wrap;
                justify-content: space-between;
                gap: 10px;
                margin-top: 50px;
            }
            .info-card {
                flex: 1;
                padding: 10px;
                border-radius: 8px;
                text-align: center;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                color: #fff;
                max-width: 220px;
                min-width: 150px;
                margin-bottom: 20px;
            }
            .bg-pending { background-color: #ffc107; }
            .bg-approved { background-color: #28a745; }
            .bg-planned { background-color: #17a2b8; }
            .bg-completed { background-color: #6c757d; }
            .info-card h3 {
                font-size: 17px;
                margin-bottom: 5px;
                margin-top: 5px;
            }
            .info-card p {
                font-size: 24px;
                font-weight: bold;
            }
           
            .chart-row {
                display: flex;
                flex-wrap: wrap;
                margin-top: 20px;
                gap: 10px;
            }
            .chart-container {
                flex: 1;
                padding: 20px;
                background-color: #fff;
                border-radius: 8px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                min-width: 300px; /* Ensures charts maintain a good size */
            }
    
            .table-container {
                margin-top: 20px;
            }
            .thead-dark th {
                position: sticky;
                top: 0;
                z-index: 1;
                background-color: #303030;
                color: white;
            }
        </style>
    </head>
