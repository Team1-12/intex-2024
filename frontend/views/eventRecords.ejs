  <h1 style="text-align: center;">Event Requests</h1>
  <table>
    <thead>
      <tr>
        <th>Event Date</th>
        <th>Start Time </th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>Contact Name</th>
        <th>Event Activities</th>
        <th>Organization</th>
      </tr>
    </thead>
    <tbody>
        <!-- the less than, percentage sign is for when we are NOT grabbing data-->
      <% if (event.length > 0) { %>
        <% event.forEach(row => { %>
          <tr>
            <!-- have the primary key which is the id and make it hidden on the page-->
            <input type="hidden" name="eventid" value="<%= row.eventid %>"> 
            <td><%= row.eventstatus %></td>
            <td><%= new Date(row.eventdate).toLocaleDateString('en-US') %></td> <!-- Format date -->
            <td><%= row.starttime %></td>
            <td><%= row.city %></td>
            <td><%= row.state %></td>
            <td><%= row.zip %></td>
            <td><%= row.contactname %></td>
            <td><%= row.eventactivities %></td>
            <td><%= row.organization %></td>
            <td>
                <!-- each of the buttons have their own form so that they can be called one at a time 
                and so that when they are clicked they will call a different route-->

            <form action="/editEventRec/<%= row.eventid %>" method="GET" style="display:inline;">
                <button type="submit">Edit</button>
            </form>
            <form action="/deleteEventRec/<%= row.evenid %>" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('Are you sure you want to delete this record?');">Delete</button>
            </form>
                  
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
            <td colspan="8">No data available</td>
        </tr>
      <% } %>
    </tbody>
  </table>
  <form action="/eventRequest" method="GET" style="display: flex; justify-content: center; margin: 20px 0;">
    <button type="submit">Add Event</button>
  </form>
</body>
